{
    "name": "spinbits/sylius-baselinker-plugin",
    "type": "sylius-plugin",
    "description": "Baselinker Plugin for Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "authors": [  {
            "name": "Spinbits",
            "homepage": "https://spinbits.io"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "sylius/sylius": "~1.10.0 || ~1.11.0",
        "symfony/flex": "^1.10"
    },
    "conflict": {
        "doctrine/doctrine-bundle": "2.3.0",
        "jms/serializer-bundle": "3.9.0",
        "symfony/cache": "^6.0",
        "symfony/doctrine-bridge": "4.4.16",
        "symfony/password-hasher": "^6.0",
        "symfony/amqp-messenger": "^6.0",
        "symfony/doctrine-messenger": "^6.0",
        "symfony/error-handler": "^6.0",
        "symfony/redis-messenger": "^6.0",
        "symfony/stopwatch": "^6.0",
        "symfony/twig-bridge": "^6.0",
        "symfony/var-dumper": "^6.0",
        "symfony/var-exporter": "^6.0",
        "symfony/property-info": "4.4.22 || 5.2.7",
        "symfony/serializer": "4.4.19 || 5.2.2"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friendsofsymfony/oauth-server-bundle": "^1.6 || >2.0.0-alpha.0 ^2.0@dev",
        "lakion/mink-debug-extension": "^2.0.0",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "0.12.74",
        "phpstan/phpstan-doctrine": "0.12.31",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpstan/phpstan-webmozart-assert": "0.12.12",
        "phpunit/phpunit": "^9.5",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.7",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "vimeo/psalm": "4.4.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/thanks": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "composer-plugin-api": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.11-dev"
        },
        "symfony": {
            "allow-contrib": false
        }
    },
    "autoload": {
        "psr-4": {
            "Spinbits\\SyliusBaselinkerPlugin\\": "src/",
            "Tests\\Spinbits\\SyliusBaselinkerPlugin\\Application\\": "tests/Application/src",
            "Tests\\Spinbits\\SyliusBaselinkerPlugin\\Behat\\": "tests/Behat",
            "Tests\\Spinbits\\SyliusBaselinkerPlugin\\Unit\\": "tests/Unit"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Application/src/Kernel.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "behat": "behat --colors --strict -vvv --no-interaction",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        }
    }
}
